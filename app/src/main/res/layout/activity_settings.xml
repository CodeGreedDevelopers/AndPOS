<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codegreed_devs.and_pos.SettingsActivity"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:titleTextColor="#ffffff"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/theme"
            android:padding="5dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">



        <Spinner
            android:id="@+id/theme"
            android:layout_width="match_parent"
            android:background="@drawable/image_holder"
            android:layout_height="40dp"/>

        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/ic_phone"
                android:paddingTop="3dp"
                android:layout_weight="1"
                android:text="Chef Phone"
                android:textColor="#101010"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ic_edt_phone"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.34"
                android:src="@drawable/ic_write" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:paddingLeft="40dp"
        android:background="@color/transparent"
        android:text="LogOut" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/set_pin_btn_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/update_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="7dp"
                android:drawableStart="@drawable/ic_add"
                android:paddingTop="3dp"
                android:layout_weight="1"
                android:text="Change Pin"
                android:textColor="#101010"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
